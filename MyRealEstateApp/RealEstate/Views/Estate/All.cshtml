@model AllEstateQueryModel
@{
    ViewData["title"] = "All Properties";

    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalEstates / Model.EstatesPerPage);
}

@if (!Model.EstateListingViewModels.Any())
{
    <h2 class="text-center">Currently there is no estates in out database. Register as broker and add one.</h2>
}
else
{
    <div class="container">
        <h3 class="pb-3">All Properties: </h3>
        <div class="row align-items-center">
            @foreach (var estate in Model.EstateListingViewModels)
            {
                <div class="col">
                    <div class="card-group">
                        <div class="card">
                            <img class="card-img-top" src=@estate.Image alt="Card image cap"> @*Picture*@
                            <div class="card-body">
                                <h5 class="card-title">@estate.Title</h5> @*Title*@
                                <p class="card-text">@estate.Description</p> @*Description*@
                                <a asp-controller="Estate" asp-action="Details" asp-route-id="@estate.Id" class="btn btn-primary">Details for property</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row pt-3">
        <div class="col-md-6">
            <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
               asp-controller="Estate"
               asp-action="All"
               asp-route-currentPage="@previousPage">Previous</a>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary float-right @(Model.CurrentPage >= maxPage ? "disabled" : string.Empty)"
               asp-controller="Estate"
               asp-action="All"
               asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
        </div>
    </div>
}